<header class="h-16 bg-white/80 glass border-b border-gray-200 flex items-center justify-between px-4 md:px-6 sticky top-0 z-30">
    <div class="flex items-center gap-4">
        <button id="open-sidebar" class="lg:hidden text-gray-500 hover:text-gray-700 p-1 rounded-md hover:bg-gray-100">
            <i data-lucide="menu" class="w-6 h-6"></i>
        </button>
        <h1 class="text-xl font-semibold text-gray-800 hidden sm:block"><%= title %></h1>
    </div>

    <div class="flex items-center gap-4">
        <button class="p-2 text-gray-500 hover:text-gray-700 hover:bg-gray-100 rounded-full relative">
            <i data-lucide="bell" class="w-5 h-5"></i>
            <span class="absolute top-1.5 right-1.5 w-2 h-2 bg-red-500 rounded-full border border-white"></span>
        </button>
        <div class="flex items-center gap-3 pl-4 border-l border-gray-200">
            <div class="text-right hidden md:block">
                <p class="text-sm font-medium text-gray-900">Admin User</p>
                <p class="text-xs text-gray-500">Administrator</p>
            </div>
            <div class="w-8 h-8 bg-gray-200 rounded-full flex items-center justify-center overflow-hidden border border-gray-300">
                <i data-lucide="user" class="w-5 h-5 text-gray-500"></i>
            </div>
        </div>
    </div>
</header>
