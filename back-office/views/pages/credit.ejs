<div class="mb-6 flex flex-col sm:flex-row sm:items-center justify-between gap-4">
    <div>
        <h2 class="text-2xl font-bold text-gray-900">Credit Management</h2>
        <p class="text-sm text-gray-500">Track customer debts and payments.</p>
    </div>
    <div class="flex gap-2">
        <button onclick="document.getElementById('addCustomerModal').classList.remove('hidden')" class="flex items-center gap-2 px-4 py-2 bg-blue-600 text-white rounded-lg text-sm font-medium hover:bg-blue-700 shadow-sm shadow-blue-600/20 transition-colors">
            <i data-lucide="user-plus" class="w-4 h-4"></i>
            Add Customer
        </button>
    </div>
</div>

<!-- Add Customer Modal -->
<div id="addCustomerModal" class="fixed inset-0 bg-gray-900/50 z-50 hidden flex items-center justify-center">
    <div class="bg-white rounded-xl p-6 w-full max-w-md shadow-2xl">
        <h3 class="text-lg font-bold mb-4">Add New Customer</h3>
        <form action="/credit/add" method="POST" class="space-y-4">
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">Customer Name</label>
                <input type="text" name="name" required class="w-full px-3 py-2 border rounded-lg focus:ring-2 focus:ring-blue-500 outline-none">
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">Phone Number</label>
                <input type="text" name="phone" class="w-full px-3 py-2 border rounded-lg focus:ring-2 focus:ring-blue-500 outline-none">
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">Initial Credit Limit (Optional)</label>
                <input type="number" name="initialLimit" class="w-full px-3 py-2 border rounded-lg focus:ring-2 focus:ring-blue-500 outline-none">
            </div>
            <div class="flex justify-end gap-2 mt-6">
                <button type="button" onclick="document.getElementById('addCustomerModal').classList.add('hidden')" class="px-4 py-2 text-gray-600 hover:bg-gray-100 rounded-lg">Cancel</button>
                <button type="submit" class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700">Save Customer</button>
            </div>
        </form>
    </div>
</div>

<div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-6">
    <div class="bg-white rounded-xl p-6 shadow-sm border border-gray-100">
        <p class="text-sm font-medium text-gray-500 mb-1">Total Outstanding Credit</p>
        <h3 class="text-2xl font-bold text-gray-900">Ksh. <%= customers.reduce((sum, c) => sum + c.balance, 0).toLocaleString() %></h3>
    </div>
</div>

<div class="bg-white rounded-xl shadow-sm border border-gray-100 overflow-hidden">
    <div class="overflow-x-auto">
        <table class="w-full text-left text-sm">
            <thead class="bg-gray-50 border-b border-gray-100">
                <tr>
                    <th class="px-6 py-4 font-medium text-gray-500">Customer Name</th>
                    <th class="px-6 py-4 font-medium text-gray-500">Phone</th>
                    <th class="px-6 py-4 font-medium text-gray-500 text-right">Total Credit</th>
                    <th class="px-6 py-4 font-medium text-gray-500 text-right">Paid Amount</th>
                    <th class="px-6 py-4 font-medium text-gray-500 text-right">Balance</th>
                    <th class="px-6 py-4 font-medium text-gray-500 text-right">Actions</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-gray-100">
                <% if (customers && customers.length > 0) { %>
                    <% customers.forEach(customer => { %>
                    <tr class="hover:bg-gray-50 transition-colors">
                        <td class="px-6 py-4 font-medium text-gray-900"><%= customer.name %></td>
                        <td class="px-6 py-4 text-gray-500"><%= customer.phone || 'N/A' %></td>
                        <td class="px-6 py-4 text-right text-gray-900">Ksh. <%= customer.totalCredit.toLocaleString() %></td>
                        <td class="px-6 py-4 text-right text-green-600">Ksh. <%= customer.paidAmount.toLocaleString() %></td>
                        <td class="px-6 py-4 text-right font-bold <%= customer.balance > 0 ? 'text-red-600' : 'text-gray-900' %>">
                            Ksh. <%= customer.balance.toLocaleString() %>
                        </td>
                        <td class="px-6 py-4 text-right">
                            <button onclick="document.getElementById('paymentModal-<%= customer._id %>').classList.remove('hidden')" class="text-blue-600 hover:text-blue-700 font-medium text-xs mr-2">Record Payment</button>
                            <form action="/credit/delete/<%= customer._id %>" method="POST" class="inline" onsubmit="return confirm('Are you sure?');">
                                <button type="submit" class="text-gray-400 hover:text-red-600 transition-colors">
                                    <i data-lucide="trash-2" class="w-4 h-4"></i>
                                </button>
                            </form>
                        </td>
                    </tr>

                    <!-- Payment Modal -->
                    <div id="paymentModal-<%= customer._id %>" class="fixed inset-0 bg-gray-900/50 z-50 hidden flex items-center justify-center text-left">
                        <div class="bg-white rounded-xl p-6 w-full max-w-sm shadow-2xl">
                            <h3 class="text-lg font-bold mb-4">Record Payment</h3>
                            <p class="text-sm text-gray-500 mb-4">For <%= customer.name %> (Balance: Ksh. <%= customer.balance %>)</p>
                            <form action="/credit/payment/<%= customer._id %>" method="POST" class="space-y-4">
                                <div>
                                    <label class="block text-sm font-medium text-gray-700 mb-1">Amount (Ksh)</label>
                                    <input type="number" name="amount" max="<%= customer.balance %>" required class="w-full px-3 py-2 border rounded-lg focus:ring-2 focus:ring-blue-500 outline-none">
                                </div>
                                <div class="flex justify-end gap-2 mt-6">
                                    <button type="button" onclick="document.getElementById('paymentModal-<%= customer._id %>').classList.add('hidden')" class="px-4 py-2 text-gray-600 hover:bg-gray-100 rounded-lg">Cancel</button>
                                    <button type="submit" class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700">Record</button>
                                </div>
                            </form>
                        </div>
                    </div>
                    <% }) %>
                <% } else { %>
                    <tr>
                        <td colspan="6" class="px-6 py-4 text-center text-gray-500">No credit customers found.</td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>
</div>
