{
  "name": "whiz-pos",
  "private": true,
  "version": "5.2.0",
  "type": "module",
  "main": "electron.cjs",
  "homepage": ".",
  "engines": {
    "node": "^24.11.0"
  },
  "scripts": {
    "dev": "concurrently \"npm:dev:vite\" \"npm:dev:electron\"",
    "dev:vite": "vite --port 5174",
    "dev:electron": "electron . http://localhost:5174",
    "build": "npm run build:exe && npm run build:apk",
    "build:exe": "vite build && electron-builder",
    "build:apk": "cd apk && npm run build",
    "preview": "vite preview",
    "back-office:dev": "npm run dev --prefix back-office",
    "postinstall": "electron-rebuild"
  },
  "dependencies": {
    "@ai-sdk/openai": "^1.3.22",
    "@headlessui/react": "^1.7.18",
    "@playwright/test": "^1.56.1",
    "ai": "^4.3.16",
    "cannon-es": "^0.20.0",
    "clsx": "^2.1.0",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "electron-pos-printer": "^1.3.8",
    "express": "^5.1.0",
    "form-data": "^4.0.4",
    "framer-motion": "^11.0.8",
    "gsap": "^3.13.0",
    "i18next": "^23.10.1",
    "i18next-browser-languagedetector": "^7.2.0",
    "lucide-react": "^0.533.0",
    "matter-js": "^0.20.0",
    "node-cmd": "^5.0.0",
    "node-fetch": "^2.7.0",
    "qrcode": "^1.5.4",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-draggable": "^4.5.0",
    "react-i18next": "^14.1.0",
    "react-router-dom": "^6.30.1",
    "react-use": "^17.6.0",
    "tailwind-merge": "^3.4.0",
    "three": "^0.179.1",
    "zod": "^3.25.67",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@electron/rebuild": "^3.7.2",
    "@types/matter-js": "^0.20.0",
    "@types/node": "^24.0.14",
    "@types/react": "^18.3.1",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.0.0",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.1",
    "electron": "^31.7.7",
    "electron-builder": "^24.13.3",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.18",
    "typescript": "~5.8.3",
    "vite": "^4.5.14",
    "wait-on": "^9.0.3"
  },
  "author": "Whiz Tech (Josphat Mburu)",
  "description": "A modern point-of-sale application.",
  "build": {
    "appId": "com.whizpos.app",
    "productName": "WHIZ POS",
    "files": [
      "dist/**/*",
      "electron.cjs",
      "preload.js",
      "assets/**/*",
      "package.json",
      "print-jobs.cjs",
      "receipt-template.html",
      "closing-report-template.html",
      "startup-invoice-template.html"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "win": {
      "icon": "assets/logo.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": true,
      "include": "assets/installer.nsh",
      "installerIcon": "assets/logo.ico",
      "uninstallerIcon": "assets/logo.ico"
    }
  }
}
